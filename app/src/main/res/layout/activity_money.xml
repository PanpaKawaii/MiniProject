<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <!-- TextView hiển thị số tiền gốc -->
    <TextView
        android:id="@+id/textViewBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số tiền gốc: $100"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Input số tài khoản -->
    <EditText
        android:id="@+id/EditTextAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số tài khoản"
        android:inputType="number"
        android:layout_marginTop="20dp"/>

    <!-- Input tên người dùng -->
    <EditText
        android:id="@+id/EditTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên người dùng"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"/>

    <!-- Input số tiền -->
    <EditText
        android:id="@+id/EditTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số tiền"
        android:inputType="number"
        android:layout_marginTop="10dp"/>

    <!-- Nút bấm -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:layout_marginTop="20dp"/>

    <!-- TextView hiển thị kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả sẽ hiển thị ở đây"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>

</LinearLayout>
