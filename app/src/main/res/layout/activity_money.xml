<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Toolbar với nút back -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp">

        <!-- Mũi tên back vẫn dùng navigationIcon -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icarrowback"
            android:contentDescription="Back"
            android:padding="8dp" />

        <!-- Title căn giữa -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Deposit Money"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textViewBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:gravity="center"
        android:minWidth="120dp"
        android:text="$0"
        android:textColor="#fb8b24"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextBankAccount"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_style"
        android:hint="Enter bank account number"
        android:inputType="number"
        android:padding="8dp" />

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_style"
        android:hint="Enter deposit money"
        android:inputType="number"
        android:padding="8dp" />


    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="141dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#28a745"
        android:text="$ SUBMIT $"
        android:textStyle="bold"
        app:cornerRadius="8dp" />



</LinearLayout>
